#!/usr/bin/env node

import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

const cliPath = join(__dirname, '..', 'src', 'infra', 'cli', 'cli.js');

try {
  const { CapitalGainsCLI } = await import(cliPath);
  await CapitalGainsCLI.main();
} catch (error) {
  console.error('Failed to start capital-gains CLI:', error instanceof Error ? error.message : String(error));
  process.exit(1);
}
